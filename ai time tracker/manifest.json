{
    "manifest_version": 3,
    "name": "AI Time Tracker",
    "version": "1.0",
    "description": "Tracks time spent on AI-related and social media websites",
    "permissions": ["storage", "tabs", "notifications", "alarms"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "host_permissions": [
      "*://*.chat.openai.com/*",
      "*://*.bard.google.com/*",
      "*://*.claude.ai/*",
      "*://*.gemini.google.com/*",
      "*://*.facebook.com/*",
      "*://*.instagram.com/*",
      "*://*.youtube.com/*",
      "*://*.replit.com/*"
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
